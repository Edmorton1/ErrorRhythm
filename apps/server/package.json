{
	"name": "server",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"watch": "tsc --noEmit --watch",
		"build": "nest build",
		"format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
		"start": "nest start",
		"dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/apps/server/src/main",
		"lint": "eslint \"{apps,libs,services}/**/*.ts\" ",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./apps/apps-server/test/jest-e2e.json"
	},
	"devDependencies": {
		"@types/node": "^22.10.7",
		"@nestjs/cli": "^11.0.0",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.0.1",
		"@types/bcrypt": "^6.0.0",
		"@types/express": "^5.0.0",
		"@types/express-session": "^1.18.2",
		"@types/pg": "^8.15.5",
		"@types/supertest": "^6.0.2",
		"pino-pretty": "^13.1.1",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.3"
	},
	"dependencies": {
		"@nestjs/common": "^11.1.6",
		"@nestjs/core": "^11.0.1",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/mapped-types": "*",
		"@nestjs/microservices": "^11.1.6",
		"@nestjs/passport": "^11.0.5",
		"@nestjs/platform-express": "^11.0.1",
		"@nestjs/swagger": "^11.2.0",
		"bcrypt": "^6.0.0",
		"dotenv": "^17.2.1",
		"ioredis": "^5.7.0",
		"kysely": "^0.28.4",
		"nestjs-pino": "^4.4.0",
		"nestjs-zod": "^4.3.1",
		"passport": "^0.7.0",
		"pg": "^8.16.3",
		"pino": "^9.8.0",
		"pino-http": "^10.5.0",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1"
	}
}
