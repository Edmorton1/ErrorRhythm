{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "apps/apps-server/src",
	"entryFile": "apps/server/src/main",
	"compilerOptions": {
		"deleteOutDir": true,
		"webpack": true,
		"tsConfigPath": "apps/apps-server/tsconfig.app.json"
	},
	"monorepo": true,
	"root": "apps/apps-server",
	"projects": {
		"apps-server": {
			"type": "application",
			"root": "apps/apps-server",
			"entryFile": "apps/server/src/main",
			"sourceRoot": "apps/apps-server/src",
			"compilerOptions": {
				"tsConfigPath": "apps/apps-server/tsconfig.app.json"
			}
		},
		"auth": {
			"type": "application",
			"root": "apps/auth",
			"entryFile": "main",
			"sourceRoot": "apps/auth/src",
			"compilerOptions": {
				"tsConfigPath": "apps/auth/tsconfig.app.json"
			}
		}
	}
}
