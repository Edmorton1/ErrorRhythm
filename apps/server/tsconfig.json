{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"target": "ES2023",
		"resolvePackageJsonExports": true,
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"incremental": true,
		// #Listing
		"strictPropertyInitialization": false,
		"noUnusedParameters": false,
		"types": ["node", "jest"]
	}
}
