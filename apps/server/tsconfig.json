{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"target": "ES2023",
		"resolvePackageJsonExports": true,
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		// #Listing
		"strictPropertyInitialization": false,
		"noUnusedParameters": false,
		"types": ["node", "jest"],
		"paths": {
			"@apps/server/*": ["./apps/apps-server/src/*"],
			"@libs/shared/*": ["../../libs/shared/src/*"],
			"@libs/types/*": ["../../libs/types/src/*"],
			"@server/libs/*": ["./libs/*"],
			"@server/services/*": ["./services/*"]
		}
	}
}
