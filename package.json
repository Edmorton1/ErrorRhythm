{
	"name": "app",
	"version": "1.0.0",
	"packageManager": "pnpm@10.14.0",
	"scripts": {
		"lint": "npx eslint . --fix",
		"watch:s": "npm run watch --workspace=@apps/server",
		"dev:s": "npm run start:dev --workspace=@apps/server",
		"build:s": "npm run build --workspace=@apps/server",
		"start:s": "npm run start:prod --workspace=@apps/server",
		"test:s": "npm run test --workspace=@apps/server",
		"test:watch:s": "npm run test:watch --workspace=@apps/server",
		"test:cov:s": "npm run test:cov --workspace=@apps/server",
		"test:e2e:s": "npm run test:e2e --workspace=@apps/server",
		"scandb": "npm run scandb --workspace=@apps/server",
		"watch:c": "npm run watch --workspace=@apps/client",
		"dev:c": "npm run dev --workspace=@apps/client",
		"build:c": "npm run build --workspace=@apps/client",
		"start:c": "npm run preview --workspace=@apps/client",
		"test:c": "npm run test --workspace=@apps/client",
		"test:react": "npm run test:react --workspace=@apps/client",
		"test:react:watch": "npm run test:react:watch --workspace=@apps/client",
		"test:react:cov": "npm run test:react:cov --workspace=@apps/client",
		"test:watch:c": "npm run test:watch --workspace=@apps/client",
		"test:cov:c": "npm run test:cov --workspace=@apps/client",
		"test:e2e:c": "npm run test:e2e --workspace=@apps/client",
		"test:shared": "npm run test --workspace=@libs/shared",
		"prepare": "husky install || true"
	},
	"workspaces": [
		"apps/*",
		"libs/*"
	],
	"devDependencies": {
		"@eslint/js": "^9.32.0",
		"@jest/types": "^30.0.5",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.10.7",
		"@typescript-eslint/eslint-plugin": "^8.39.0",
		"@typescript-eslint/parser": "^8.39.0",
		"cross-env": "^10.0.0",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-cypress": "^5.1.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-prettier": "^5.5.3",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"husky": "^8.0.0",
		"jest": "^30.0.5",
		"lint-staged": "^16.1.4",
		"prettier": "^3.6.2",
		"ts-jest": "^29.4.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	},
	"dependencies": {
		"tslib": "^2.8.1",
		"zod": "^4.0.17"
	},
	"lint-staged": {
		"**/*.{js,mjs,cjs,jsx,ts,tsx,html,css,scss,json}": "prettier --write"
	}
}
